<div class="row justify-content-center mt-3">
  <div class="col col-md-6">
    <div class="card border-primary">
      <div class="card-body">
        <h3> <%= @test_passage.test.title %></h3>
      </div>
    </div>    
    <hr>

    <div id="progressBar">
      <div id="myBar">
        <b><%= @test_passage.current_question_number %>
        / <%= @test_passage.questions_count %> </b>
      </div>
    </div>
    <% if @test_passage.test.timer.nonzero? %>
      <div id='passage-timer' data-time-left='<%= @test_passage.time_left.seconds.to_i %>' data-time-total='<%= @test_passage.test.timer.to_i %>'>
      <div>Осталось времени: <span id='timer-value'> <%= Time.at(@test_passage.time_left).utc.strftime('%H:%M:%S') %> </span></div>
      <div class='progress'>
        <div class='progress-bar bg-info' id='timer-progress-bar' role='progressbar' style='width: <%= @test_passage.time_left/@test_passage.test.timer.seconds*100 %>%;' aria-valuenow='0' aria-valuemin='0' aria-valuemax='100'></div>
        </div>
      </div>
     <% end %>

     <%=  content_tag :div, 
                    id: 'current-test',
                    data: { 
                      current_question: @test_passage.current_question_number,
                      questions_count: @test_passage.questions_count
                      } do    %> 

      <b>
        <%= @test_passage.current_question.body %>
      </b>

      <%= form_with url: test_passage_path(@test_passage), local: true, method: :put do |form| %>
        <%= form.collection_check_boxes :answer_ids, 
            @test_passage.current_question.answers, 
            :id, :body, include_hidden: false do |b|%>
          <p>
            <%= b.check_box id: "answer_ids_#{b.object_id}"  %>
            <%= b.label %>
          </p>
        <% end %>

        <p><%= link_to 'Gist Question', gist_test_passage_path(@test_passage), method: :post %></p>
        <p><%= form.submit t('shared.next') %></p>
      <% end %>  
    <% end %>  
</div>    
